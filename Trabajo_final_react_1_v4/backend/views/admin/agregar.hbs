<div class="container" style="margin:100px auto">
  <div class="row">
    <div class="col-6 offset-3">
      <h3>Agregar una novedad</h3>
      <form action="/admin/novedades/agregar" method="post">
        <div class="mb-3 row">
          <input
            type="text"
            class="form-control"
            placeholder="Título"
            name="titulo"
          />
        </div>
        <div class="mb-3 row">
          <textarea
            type="text"
            class="form-control"
            placeholder="Subtítulo"
            name="subtitulo"
          ></textarea>
        </div>
        <div class="mb-3 row">
          <textarea
            type="text"
            class="form-control"
            placeholder="Descripción"
            name="cuerpo"
          ></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Guardar</button>
      </form>
      {{#if error}}
        <h6 style="color: red;">{{message}}</h6>
      {{/if}}
    </div>
  </div>
</div>