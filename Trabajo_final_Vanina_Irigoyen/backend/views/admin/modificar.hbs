<div class="container" style="margin:50px auto">
  <div class="row">
    <div class="col-6 offset-3">
      <h4>Modificar la novedad</h4>
      <br />
      <form
        action="/admin/novedades/modificar"
        method="post"
        enctype="multipart/form-data"
      >
        <input type="hidden" value="{{novedad.id}}" name="id" />
        <div class="form-group">
          <label for="">Título</label>
          <input
            tupe="text"
            placeholder="Título"
            value="{{novedad.titulo}}"
            class="form-control"
            name="titulo"
          />
        </div>
        <br />
        <div class="form-group">
          <label for="">Subtítulo</label>
          <textarea
            placeholder="Subtítulo"
            class="form-control"
            name="subtitulo"
          >{{novedad.subtitulo}}</textarea>
        </div>
        <br />
        <div class="form-group">
          <label for="">Descripción</label>
          <textarea
            placeholder="Cuerpo"
            class="form-control"
            name="cuerpo"
          >{{novedad.cuerpo}}</textarea>
        </div>
        <br />
        <div class="mb-3 row">
          <p>
            <label>Imagen:
              <input
                type="file"
                class="form-control"
                name="imagen"
                id="imagen"
              /></label>
          </p>
          <p>
            <label><input
                type="checkbox"
                name="img_delete"
                id="img_delite"
                value="1"
              />Eliminar imagen actual?</label>
            <input
              type="hidden"
              name="img_original"
              value="{{novedad.img_id}}"
            />
          </p>
        </div>
        <br />
        <button type="submit" class="btn btn-primary">Modificar</button>
      </form>
      {{#if error}}
        <h5>{{message}}</h5>
      {{/if}}
    </div>
  </div>
</div>